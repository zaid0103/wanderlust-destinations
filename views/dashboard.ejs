<% layout("/layouts/boilerplate") %>

<div class="row">
    <div class="col-8 offset-2">
        <h2>My Bookings</h2>
        <% if(bookings.length === 0) { %>
            <p>You haven't made any bookings yet.</p>
        <% } else { %>
            <% bookings.forEach(booking => { %>
                <div class="card mb-3">
                    <div class="card-body">
                        <h5 class="card-title"><%= booking.listing.title %></h5>
                        <p class="card-text">
                            Check-in: <%= booking.startDate.toLocaleDateString() %><br>
                            Check-out: <%= booking.endDate.toLocaleDateString() %><br>
                            Guests: <%= booking.guests %><br>
                            Total Price: â‚¹<%= booking.totalPrice.toLocaleString("en-IN") %><br>
                            Status: <%= booking.status %>
                        </p>
                        <a href="/listings/<%= booking.listing._id %>" class="btn btn-info">View Property</a>
                    </div>
                </div>
            <% }) %>
        <% } %>
    </div>
</div>